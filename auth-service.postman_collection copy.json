{
  "info": {
    "name": "Auth Service API (NGROK READY)",
    "_postman_id": "c9bd1234-abcd-5678-ef90-ngrok-collection",
    "description": "Postman Collection for Flask Auth Microservice via NGROK",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },

  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "https://YOUR-NGROK-URL.ngrok-free.app/api/v1/auth/register",
          "protocol": "https",
          "host": ["YOUR-NGROK-URL", "ngrok-free", "app"],
          "path": ["api", "v1", "auth", "register"]
        }
      }
    },

    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"123456\"\n}"
